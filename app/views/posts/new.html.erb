<h1><%= action_name.capitalize %> Post</h1>

<%= form_with model: @post, local: true do |form| %>
  <% if @post.errors.any? %>
    <div style="color: red;">
      <h4><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h4>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= form.label :content %><br>
    <%= form.text_area :content, rows: 5, required: true %>
  </div>
  
  <div>
    <%= form.submit action_name.capitalize %>
  </div>
<% end %>

<%= link_to "Back to Posts", root_path %>
