<h1>Login</h1>

<%= form_with url: login_path, local: true do |form| %>
  <% if flash[:alert] %>
    <p style="color: red;"><%= flash[:alert] %></p>
  <% end %>
  
  <div>
    <%= form.label :username %><br>
    <%= form.text_field :username, required: true %>
  </div>
  
  <div>
    <%= form.submit "Login" %>
  </div>
<% end %>
